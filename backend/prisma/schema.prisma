generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String                    @id @default(uuid())
  email                    String                    @unique
  handle                   String                    @unique
  passwordHash             String                    @map("password_hash")
  displayName              String?                   @map("display_name")
  avatarUrl                String?                   @map("avatar_url")
  avatarColor              String?                   @default("#06b6d4") @map("avatar_color")
  bio                      String?
  currentDeviceId          String?                   @map("current_device_id")
  defaultDeviceId          String?                   @map("default_device_id")
  inviteCode               String?                   @unique @map("invite_code")
  inviteCodeExpiresAt      DateTime?                 @map("invite_code_expires_at")
  createdAt                DateTime                  @default(now()) @map("created_at")
  updatedAt                DateTime                  @updatedAt @map("updated_at")
  conversationParticipants ConversationParticipant[]
  createdConversations     Conversation[]            @relation("ConversationCreator")
  devices                  Device[]
  sentFriendRequests       FriendRequest[]           @relation("SentFriendRequests")
  receivedFriendRequests   FriendRequest[]           @relation("ReceivedFriendRequests")
  friendshipsAsUser1       Friendship[]              @relation("FriendshipUser1")
  friendshipsAsUser2       Friendship[]              @relation("FriendshipUser2")
  messages                 Message[]
  sessions                 Session[]

  @@map("users")
}

model Device {
  id                   String         @id @default(uuid())
  userId               String         @map("user_id")
  publicKey            String         @map("public_key")
  deviceName           String?        @map("device_name")
  lastSeenAt           DateTime?      @map("last_seen_at")
  revokedAt            DateTime?      @map("revoked_at")
  createdAt            DateTime       @default(now()) @map("created_at")
  updatedAt            DateTime       @updatedAt @map("updated_at")
  createdConversations Conversation[] @relation("ConversationCreatorDevice")
  targetConversations  Conversation[] @relation("ConversationTargetDevice")
  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages             Message[]

  @@map("devices")
}

model Conversation {
  id                String                    @id @default(uuid())
  createdByUserId   String                    @map("created_by_user_id")
  createdByDeviceId String?                   @map("created_by_device_id")
  targetDeviceId    String?                   @map("target_device_id")
  isGroup           Boolean                   @default(false) @map("is_group")
  groupName         String?                   @map("group_name")
  createdAt         DateTime                  @default(now()) @map("created_at")
  updatedAt         DateTime                  @updatedAt @map("updated_at")
  participants      ConversationParticipant[]
  createdByDevice   Device?                   @relation("ConversationCreatorDevice", fields: [createdByDeviceId], references: [id])
  createdByUser     User                      @relation("ConversationCreator", fields: [createdByUserId], references: [id])
  targetDevice      Device?                   @relation("ConversationTargetDevice", fields: [targetDeviceId], references: [id])
  messages          Message[]

  @@map("conversations")
}

model ConversationParticipant {
  conversationId String       @map("conversation_id")
  userId         String       @map("user_id")
  addedAt        DateTime     @default(now()) @map("added_at")
  leftAt         DateTime?    @map("left_at")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([conversationId, userId])
  @@map("conversation_participants")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String       @map("conversation_id")
  senderUserId   String       @map("sender_user_id")
  senderDeviceId String       @map("sender_device_id")
  ciphertext     String
  nonce          String?
  messageIndex   Int?         @map("message_index")
  createdAt      DateTime     @default(now()) @map("created_at")
  deliveredAt    DateTime?    @map("delivered_at")
  readAt         DateTime?    @map("read_at")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderDevice   Device       @relation(fields: [senderDeviceId], references: [id])
  senderUser     User         @relation(fields: [senderUserId], references: [id])

  @@map("messages")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  tokenHash String   @map("token_hash")
  deviceId  String?  @map("device_id")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model FriendRequest {
  id          String    @id @default(uuid())
  fromUserId  String    @map("from_user_id")
  toUserId    String    @map("to_user_id")
  status      String    @default("pending")
  inviteCode  String    @unique @map("invite_code")
  createdAt   DateTime  @default(now()) @map("created_at")
  respondedAt DateTime? @map("responded_at")
  fromUser    User      @relation("SentFriendRequests", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser      User      @relation("ReceivedFriendRequests", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, toUserId])
  @@map("friend_requests")
}

model Friendship {
  id        String   @id @default(uuid())
  user1Id   String   @map("user1_id")
  user2Id   String   @map("user2_id")
  createdAt DateTime @default(now()) @map("created_at")
  user1     User     @relation("FriendshipUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2     User     @relation("FriendshipUser2", fields: [user2Id], references: [id], onDelete: Cascade)

  @@unique([user1Id, user2Id])
  @@map("friendships")
}
